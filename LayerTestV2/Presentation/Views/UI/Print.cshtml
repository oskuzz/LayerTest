@model List<DataAccess.Database.Table.Customer>
@{
    ViewData["Title"] = "Print";
}

<h1>Print</h1>

<div>
	<form method="post">
		<input type="text" placeholder="Display name" name="displayName" />
		<button type="submit">Get customer</button>
	</form>

	<h2>Customers</h2>

	<table>
		<thead>
            <tr>
                <td>Customer ID</td>
                <td>First name</td>
                <td>Last name</td>
                <td>Display name</td>
            </tr>
		</thead>
		<tbody>
			@{
				foreach (var c in Model)
				{
            <tr>
                <td>@c.CustomerID</td>
                <td>@c.FirstName</td>
                <td>@c.LastName</td>
                <td>@c.Displayname</td>
            </tr>
				}
			}
		</tbody>
	</table>
</div>